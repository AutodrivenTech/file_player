<launch>
    <arg name="driver" default="file_player"/>
    <arg name="output" default="screen"/>
    <node name="$(arg driver)" pkg="$(arg driver)" type="$(arg driver)" output="$(arg output)">
    </node>

    <arg name="camera" default="stereo"/>
    <arg name="frame_id" default="$(arg camera)"/>
    <arg name="proc" default="true"/>

    <!-- Proc -->
    <node if="$(arg proc)"
        pkg="stereo_image_proc" type="stereo_image_proc"
        name="stereo_image_proc" ns="$(arg camera)">
	<param name="stereo_algorithm" value="0"/>
	<param name="prefilter_size" value="15"/>
	<param name="prefilter_cap" value="18"/>
	<param name="correlation_window_size" value="21"/>
	<param name="min_disparity" value="0"/>
	<param name="disparity_range" value="128"/>
	<param name="uniqueness_ratio" value="10.0"/>
	<param name="texture_threshold" value="10"/>
	<param name="speckle_size" value="110"/>
	<param name="speckle_range" value="8"/>
    </node>
</launch>
